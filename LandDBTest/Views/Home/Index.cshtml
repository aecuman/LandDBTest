@using LandDBTest.Models
@model LoginViewModel
@{
    ViewBag.Title = "Index";
}
<style>
    body{
        background-color:white;
    }
</style>
<div class="col-lg-8">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>            
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <h3 class="titlecarousel"> Property Price Trends</h3>
                
                <img src="~/Pictures/trendGraph.svg" alt="ASP.NET" class="img-responsive ctr" />
                   
                <div>
                    <div class="carousel-caption">
                        <p>
                         Compare average land prices of villages in Uganda
                        </p>
                        <p>
    <a class="btn btn-default btn-default" href="/Home/PriceIndex">
        Learn More
    </a>
</p>
                    </div>
                </div>
            </div>
            <div class="item">
                <h3 class="titlecarousel"> Property Price Index</h3>
                <img src="~/Pictures/indexMap.svg" alt="Visual Studio" class="img-responsive ctr" />
                <div class="carousel-caption">
                    <p>
                     The Highest number of transactions: <h3>Q1:<b class="text-info">Namugongo</b></h3>
                        <h4>Property prices have risen by <b class="text-info">XX.XX%</b> compared to the previous quarter, and risen by <b class="text-info">X.XX%</b> compared to the previous year.
The average price of land in the Uganda was <b>UGX YYYYY</b></h4>
                        </p>
                    <p>
                        <a class="btn btn-default btn-default" href="/Home/PriceIndex">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <h3 class="titlecarousel"> Property Market Statistics</h3>
                <img src="~/Pictures/priceTable.svg" alt="Package Management" class="img-responsive ctr" />
                <div class="carousel-caption">
                    <p>
                      Search for transactional prices of properties in your Village
                        </p>
                    <p>
                        <a class="btn btn-default btn-default" href="/Home/PriceStat">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
           
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
