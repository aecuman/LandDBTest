@using LandDBTest.Models
@model LoginViewModel
@{
    ViewBag.Title = "Index";
}
<style>
    body{
        background-color:white;
    }
</style>
<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>            
        </ol>
        <div class="carousel-inner" role="listbox">
         
            <div class="item active">
                <h3 class="titlecarousel"> Property Price Index</h3>
                <img src="~/Pictures/indexMap.png" alt="Map" class="img-responsive ctr" />
                <div class="carousel-caption">
                    <h5>
                        The Highest number of transactions:
                    </h5> <h2>First Quarter of 2016</h2>
                    <h3><b class="text-info">Namugongo,</b>Wakiso District</h3>
                        
                       
                    <p>
                        <a class="btn btn-default btn-default" href="/Home/LearnMore">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <h3 class="titlecarousel"> Property Price Trends</h3>

                <img src="~/Pictures/trendGraph.png" alt="Graph" class="img-responsive ctr" />

                <div>
                    <div class="carousel-caption">

                        <h4>
                            Property prices have risen by <b class="text-info">XX.XX%</b> compared to the previous quarter, and risen by <b class="text-info">XX.XX%</b> compared to the previous year
                        </h4>
                        <p>
                            <a class="btn btn-default btn-default" href="/Home/LearnMore">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="item">
                <h3 class="titlecarousel"> Property Market Statistics</h3>
                <img src="~/Pictures/Table.png" alt="Table" class="img-responsive ctr" />
                <div class="carousel-caption">
                    <p>
                        Total Amount Transacted in the Uganda property market over the last few years;
                        </p>
                    
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th class="text-center">Year</th>
                                <th class="text-center">2013</th>
                                <th class="text-center">2014</th>
                                <th class="text-center">2015</th>
                            </tr>
                            <tr>
                                <td>Millions'</td>
                                <td>xx</td>
                                <td>xx</td>
                                <td>xx</td>
                            </tr>
                        </table>
                    
                    <p>
                        <a class="btn btn-default btn-default" href="/Home/LearnMore">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
           
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
